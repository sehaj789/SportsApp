<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#ffeceff1"
    >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="81.0dp"
        android:id="@+id/tv1"
        android:textSize="35sp"
        android:text="Sports App"
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textColor="#ffbf360c" />
    <EditText
        android:id="@+id/text1"
        android:hint="Profile Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="8dp"
        android:layout_below="@+id/tv1" />
 
    <EditText
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:padding="8dp"
        android:hint="Password"
        android:layout_marginTop="12dp"
        android:inputType="textPassword"
        android:layout_below="@+id/text1" />

    <Button
        android:id="@+id/b1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@+id/text2"
        android:layout_marginTop="17dp"
        android:layout_alignStart="@+id/text2"
        android:layout_alignEnd="@+id/text2"
        android:background="#ffff3d00"
        android:textColor="#ffffffff"
         android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="66.0dp"
        android:id="@+id/text3"
        android:text="Not a member?Sign up now"
        android:layout_below="@+id/b1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textSize="20dp"
        android:textColor="#ff5c6bc0" />
</RelativeLayout>