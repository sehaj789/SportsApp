<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
        android:background="#ffeceff1">

    <RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="236.0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:textSize="25sp"
            android:text="Welcome Home!!!"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:textColor="#ff283593" />
        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By Country"
            android:layout_below="@id/tv1"
            android:layout_marginTop="17dp"
            android:background="#ff304ffe"
            android:textColor="#ffffffff" />
        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search By Date"
            android:layout_below="@id/b1"
            android:layout_marginTop="17dp"
            android:background="#ffe65100"
            android:textColor="#ffffffff" />
        <Button
            android:id="@+id/b3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:layout_below="@id/b2"
            android:layout_marginTop="17dp"
            android:background="#ff1b5e20"
            android:textColor="#fff3e5e5"
            android:textStyle="bold"
            android:textSize="20dp" />
    </RelativeLayout>

</ScrollView>
