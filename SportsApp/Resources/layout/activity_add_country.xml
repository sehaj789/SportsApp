<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#ffeceff1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:textSize="25sp"
            android:text="Add New Country"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:textColor="#ff151de9" />
        <EditText
            android:id="@+id/text1"
            android:hint="Country ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:padding="8dp"
            android:layout_below="@id/tv1"/>
        <EditText
            android:id="@+id/text2"
            android:hint="Country Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:padding="8dp"
            android:layout_below="@id/text1"/>
        <Button
            android:id="@+id/b1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Country"
            android:layout_below="@id/text2"
            android:layout_marginTop="17dp"
            android:background="#ff394de6" />
        <Button
            android:id="@+id/b2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back To Admin Home"
            android:layout_below="@id/b1"
            android:layout_marginTop="17dp"
            android:background="#ffe6d7d7" />
    </RelativeLayout>

</ScrollView>
